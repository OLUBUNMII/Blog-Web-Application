<%- include('partials/header.ejs') %>

    <div class="container">
        <% if (deleted) { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                Article has been deleted successfully!
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        <% } %>

        <% if (articles.length > 0) { %>
            <% articles.forEach(article => { %>
                <div class="card row mx-5 my-5">
                    <div class="card-header">
                        <h5>
                            <%= article.title %>
                        </h5>
                    </div>
                    <div class="card-body">
                        <p class="card-text">
                            <%= article.description %>
                        </p>
                        <small>
                            <% if (article.editedAt) { %>
                                Edited on <%= article.editedAt.toLocaleString() %>
                            <% } else { %>
                                Posted on <%= article.date.toLocaleString() %>
                            <% } %>
                        </small>
                    </div>
                    <div>
                        <button class="btn btn-custom btn-outline-dark mb-3" 
                                data-id="<%= article.id %>"
                                data-title="<%= article.title %>"
                                data-description="<%= article.description %>"
                                data-date="<%= article.date.toLocaleString() %>"
                                data-bs-toggle="modal"
                                data-bs-target="#viewModal">
                            <i class="bi bi-eye"></i>
                        </button>
                        <button class="btn btn-custom btn-outline-dark mx-2 mb-3"
                                data-id="<%= article.id %>"
                                data-title="<%= article.title %>"
                                data-description="<%= article.description %>"
                                data-bs-toggle="modal"
                                data-bs-target="#editModal">
                            <i class="bi bi-pencil-square"></i>
                        </button>
                        <button class="btn btn-delete mb-3"data-bs-toggle="modal" 
                                data-bs-target="#confirmDeleteModal" 
                                data-article-id="<%= article.id %>">
                            <i class="bi bi-trash3"></i>
                        </button>
                    </div>
                </div>
            <% }) %>
        <% } else { %> 
            You haven't uploaded any articles yet.
            <% } %>
    </div>

    <div class="modal fade" id="formModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Create a new article</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form action="/submit" method="POST">
                        <div class="mb-3">
                            <label for="exampleFormControlInput1" class="form-label">Title</label>
                            <input type="text" class="form-control" id="exampleFormControlInput1" name="title" placeholder="Enter a title for your new article">
                        </div>
                        <div class="mb-3">
                            <label for="exampleFormControlTextarea1" class="form-label">What's on your mind?</label>
                            <textarea class="form-control" id="exampleFormControlTextarea1" name="description" rows="3"></textarea>
                        </div>
                        <button type="submit" class="btn btn-outline-dark">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="editModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Edit your article</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form action="/update" method="POST">
                        <input type="hidden" name="id" id="edit-id">
                        <div class="mb-3">
                            <label for="edit-title" class="form-label">Title</label>
                            <input type="text" class="form-control" id="edit-title" name="title" placeholder="Enter a title">
                        </div>
                        <div class="mb-3">
                            <label for="edit-description" class="form-label">What's on your mind?</label>
                            <textarea class="form-control" id="edit-description" name="description" rows="3"></textarea>
                        </div>
                        <button type="submit" class="btn btn-outline-dark">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="viewModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <h5 id="view-title" class="fw-bold"></h5>
                    </div>
                    <div class="mb-3">
                        <p id="view-description" class="mt-3"></p>
                        <small id="view-date" class="text-muted"></small>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="confirmDeleteLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="confirmDeleteLabel">Confirm Deletion</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete this article?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-dark" data-bs-dismiss="modal">Cancel</button>
                    <form id="confirmDeleteForm" method="POST">
                        <button type="submit" class="btn btn-danger">Yes, Delete</button>
                    </form>
                </div>
            </div>
        </div>
    </div>


<%- include('partials/footer.ejs') %>